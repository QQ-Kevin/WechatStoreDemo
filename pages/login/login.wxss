/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  height: 100vh;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.header {
  margin-bottom: 60rpx;
  margin-top: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
}

.form {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #fafafa;
}

.button-area {
  margin-top: 40rpx;
  width: 100%;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.register-link {
  text-align: center;
  font-size: 28rpx;
  color: #1aad19;
  margin-top: 20rpx;
} 